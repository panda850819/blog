---
interface Props {
  title: string;
  description?: string;
  url: string;
  date?: Date;
  tags?: string[];
}

const { title, description, url, date, tags } = Astro.props;
import { formatDate } from "../../utils/date";
---

<article>
  <div class="title-row">
    <a href={url}>{title}</a>
    {date && <time datetime={date.toISOString()}>{formatDate(date)}</time>}
  </div>
  <p class="muted-text">{description}</p>
  {
    tags && tags.length > 0 && (
      <div class="tags">
        {tags.map((tag) => (
          <a href={`/blog/tags/${encodeURIComponent(tag)}`} class="tag">{tag}</a>
        ))}
      </div>
    )
  }
</article>

<style>
  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
  }

  .title-row a {
    font-size: var(--text-lg);
    text-decoration: none;
    color: var(--text-color);
    flex: 1;
    min-width: 0;
  }

  .title-row a:hover {
    color: var(--link-color);
  }

  .title-row time {
    flex-shrink: 0;
    font-size: var(--text-xs);
    color: var(--text-muted);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tags .tag {
    font-size: var(--text-xs);
    opacity: 0.6;
    text-decoration: none;
    color: var(--text-color);
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    background: var(--border-color);
    transition: all 0.2s;
  }

  .tags .tag:hover {
    opacity: 1;
    color: var(--link-color);
  }

  @media (max-width: 480px) {
    .title-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .title-row time {
      order: -1;
    }
  }
</style>
