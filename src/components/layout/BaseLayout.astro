---
import "../../styles/theme.css";
import "../../styles/animations.css";
import "../../styles/global.css";

import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/roboto-mono/400.css";

import interRegularWoff2 from "@fontsource/inter/files/inter-latin-400-normal.woff2?url";
import interMediumWoff2 from "@fontsource/inter/files/inter-latin-500-normal.woff2?url";
import interSemiBoldWoff2 from "@fontsource/inter/files/inter-latin-600-normal.woff2?url";
import robotoMonoRegularWoff2 from "@fontsource/roboto-mono/files/roboto-mono-latin-400-normal.woff2?url";
import { ClientRouter } from "astro:transitions";
import Navigation from "../shared/Navigation.astro";
import BackToTop from "../ui/BackToTop.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: string;
  type?: "website" | "article";
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
}

const siteUrl = "https://blog.pdzeng.com";
const {
  title,
  description,
  image = "/default-og-image.png",
  canonicalURL = Astro.url,
  type = "website",
  publishedTime,
  modifiedTime,
  author = "熊貓隨口說"
} = Astro.props;

const absoluteImageUrl = image.startsWith("http") ? image : `${siteUrl}${image}`;
const absoluteCanonicalUrl = canonicalURL instanceof URL ? canonicalURL.href : `${siteUrl}${canonicalURL}`;
---

<!doctype html>
<html lang="zh-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Preload critical fonts -->
    <link rel="preload" href={interRegularWoff2} as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href={interMediumWoff2} as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href={interSemiBoldWoff2} as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href={robotoMonoRegularWoff2} as="font" type="font/woff2" crossorigin="anonymous" />

    <link rel="canonical" href={absoluteCanonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={absoluteCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteImageUrl} />
    <meta property="og:site_name" content="熊貓隨口說" />
    <meta property="og:locale" content="zh_TW" />
    {type === "article" && publishedTime && (
      <meta property="article:published_time" content={publishedTime.toISOString()} />
    )}
    {type === "article" && modifiedTime && (
      <meta property="article:modified_time" content={modifiedTime.toISOString()} />
    )}
    {type === "article" && (
      <meta property="article:author" content={author} />
    )}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@pandazeng1" />
    <meta name="twitter:creator" content="@pandazeng1" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteImageUrl} />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(
      type === "article" ? {
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        "headline": title,
        "description": description,
        "image": absoluteImageUrl,
        "url": absoluteCanonicalUrl,
        "datePublished": publishedTime?.toISOString(),
        "dateModified": modifiedTime?.toISOString() || publishedTime?.toISOString(),
        "author": {
          "@type": "Person",
          "name": author,
          "url": siteUrl
        },
        "publisher": {
          "@type": "Person",
          "name": "熊貓隨口說",
          "url": siteUrl
        }
      } : {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "熊貓隨口說",
        "description": description,
        "url": siteUrl,
        "author": {
          "@type": "Person",
          "name": "熊貓隨口說",
          "url": siteUrl,
          "sameAs": [
            "https://github.com/panda850819",
            "https://x.com/pandazeng1",
            "https://www.linkedin.com/in/wei-chieh-tseng-369303161/"
          ]
        }
      }
    )} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Analytics 4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZV83MTE5NJ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-ZV83MTE5NJ');

      // Track page views on Astro view transitions
      document.addEventListener('astro:page-load', () => {
        gtag('event', 'page_view', {
          page_title: document.title,
          page_location: window.location.href,
        });
      });
    </script>

    <ClientRouter />
    <script is:inline>
      // Always use dark theme
      document.documentElement.setAttribute("data-theme", "dark");

      // Handle theme persistence during view transitions
      document.addEventListener("astro:before-swap", (ev) => {
        ev.newDocument.documentElement.setAttribute("data-theme", "dark");
      });

      // Add initial-load class
      document.addEventListener("DOMContentLoaded", () => {
        document.body.classList.add("initial-load");

        setTimeout(() => {
          document.body.classList.remove("initial-load");
          document.documentElement.classList.add("theme-transition");
        }, 1000);
      });
    </script>
  </head>
  <body>
    <div class="top-glow" transition:persist></div>
    <main>
      <div class="nav-container">
        <Navigation />
      </div>
      <div class="content-wrapper"><slot /></div>
    </main>
    <div class="bottom-glow" transition:persist></div>
    <BackToTop />
  </body>
</html>
